<h1><%= @title %></h1>


<table>
  <tr>
    <th>Produkt</th>
    <th>Categories</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td>
          <% for category in Category.all %>
            <% if product.category_ids.include?(category.id) %>
              <%= category.name %>
              <% end %>
          <% end %></td>
        <td><%= image_tag product.photo.url(:medium) %></td>
        <td><%= image_tag product.photo.url(:small) %></td>
        <td><%= image_tag product.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>

</table>

